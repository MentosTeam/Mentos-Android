<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layer_gray_top_none_stroke_opacity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_list_mentos_multiple_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <soup.neumorphism.NeumorphCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="11dp"
            android:padding="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:neumorph_backgroundColor="@color/white"
            app:neumorph_inset="6dp"
            app:neumorph_shadowColorDark="@color/gray_shadow"
            app:neumorph_shadowColorLight="@android:color/transparent"
            app:neumorph_shadowElevation="6dp"
            app:neumorph_shapeAppearance="@style/shadow_round_8"
            app:neumorph_shapeType="flat"
            app:neumorph_strokeColor="@color/gray_eded"
            app:neumorph_strokeWidth="1dp">

            <View
                android:layout_width="17dp"
                android:layout_height="17dp"
                tools:ignore="ContentDescription" />
        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="11dp"
            android:padding="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:neumorph_backgroundColor="@color/white"
            app:neumorph_inset="6dp"
            app:neumorph_shadowColorDark="@color/gray_shadow"
            app:neumorph_shadowColorLight="@android:color/transparent"
            app:neumorph_shadowElevation="6dp"
            app:neumorph_shapeAppearance="@style/shadow_round_8"
            app:neumorph_shapeType="flat"
            app:neumorph_strokeColor="@color/gray_eded"
            app:neumorph_strokeWidth="1dp">

            <ImageView
                android:id="@+id/search_mentos_multiple_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_mentos_red_17"
                tools:ignore="ContentDescription" />
        </soup.neumorphism.NeumorphCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/search_list_mentos_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="5dp"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:neumorph_backgroundColor="@color/white"
        app:neumorph_inset="6dp"
        app:neumorph_shadowColorDark="@color/gray_shadow"
        app:neumorph_shadowColorLight="@android:color/transparent"
        app:neumorph_shadowElevation="6dp"
        app:neumorph_shapeAppearance="@style/shadow_round_8"
        app:neumorph_shapeType="flat"
        app:neumorph_strokeColor="@color/gray_eded"
        app:neumorph_strokeWidth="1dp">

        <ImageView
            android:id="@+id/search_mentos_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_mentos_red_17"
            tools:ignore="ContentDescription" />
    </soup.neumorphism.NeumorphCardView>

    <TextView
        android:id="@+id/search_list_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="44dp"
        android:ellipsize="end"
        android:fontFamily="@font/noto_medium"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:text="프랑스어과 17학번 재학생입니다. 프랑스 문화, 회화, 쓰기, 읽기 관련 강의 모두 멘토링 진행 가능하니 연프랑스어과 17학번 재학생입니다."
        android:textColor="@color/black_3333"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/search_list_mentos_layout"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/search_btn_delete_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="14dp"
        android:background="@android:color/transparent"
        android:padding="4dp"
        android:src="@drawable/ic_search_x"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/search_comment_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="9dp"
        android:src="@drawable/ic_search_comment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/search_list_mentos_layout"
        app:layout_constraintTop_toBottomOf="@id/search_list_title"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/search_comment_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:fontFamily="@font/noto_medium"
        android:includeFontPadding="false"
        android:text="0"
        android:textColor="@color/gray_7070"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/search_comment_iv"
        app:layout_constraintStart_toEndOf="@id/search_comment_iv"
        app:layout_constraintTop_toTopOf="@id/search_comment_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>