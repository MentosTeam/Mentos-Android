<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="bottom_navi_font" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/gray_7070</item>
        <item name="android:textSize">9sp</item>
        <item name="fontFamily">@font/noto_medium</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_gray_2_stroke_top_20</item>
    </style>

    <style name="shadow_round_20">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">20dp</item>
    </style>

    <style name="shadow_round_8">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">8dp</item>
    </style>

    <style name="shadow_oval">
        <item name="neumorph_cornerFamily">oval</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/noto_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/gray_c7c6</item>
        <item name="tabSelectedTextColor">@color/black_3333</item>
    </style>

    <style name="review_star_ratingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/layer_review_star</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:maxHeight">25dp</item>
    </style>
</resources>